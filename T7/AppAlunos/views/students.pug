extends layout

block content
	.w3-card-4
		header.w3-container.w3-pale-red
			h3.w3-left Lista de Estudantes (DAW2020)
		if list.length > 0
			.w3-container 
				table.w3-table-all
					tr 
						th Numero
						th Nome
						th Git
					each s in list
						tr
							td
								a(href='/alunos/'+s.numero) #{s.numero}
							td= s.nome
							td= s.git
		else
			.w3-container
				p There are no students...
		footer.w3-container.w3-pale-red
			adress.w3-right
				a(href='/alunos/registar')
					button.w3-button.w3-green.w3-margin Registar
